<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.keepjob.sys.user.UserRoleMapper" >
  <resultMap id="BaseResultMap" type="com.keepjob.sys.user.UserRole" >
    <id column="role_code" property="roleCode" jdbcType="VARCHAR" />
    <id column="user_code" property="userCode" jdbcType="VARCHAR" />
    <result column="version" property="version" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Example_Where_Clause" >
    <where >
      <foreach collection="oredCriteria" item="criteria" separator="or" >
        <if test="criteria.valid" >
          <trim prefix="(" suffix=")" prefixOverrides="and" >
            <foreach collection="criteria.criteria" item="criterion" >
              <choose >
                <when test="criterion.noValue" >
                  and ${criterion.condition}
                </when>
                <when test="criterion.singleValue" >
                  and ${criterion.condition} #{criterion.value}
                </when>
                <when test="criterion.betweenValue" >
                  and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                </when>
                <when test="criterion.listValue" >
                  and ${criterion.condition}
                  <foreach collection="criterion.value" item="listItem" open="(" close=")" separator="," >
                    #{listItem}
                  </foreach>
                </when>
              </choose>
            </foreach>
          </trim>
        </if>
      </foreach>
    </where>
  </sql>
  <sql id="Base_Column_List" >
    role_code, user_code, version
  </sql>
  <!--根据用户查询角色 (枚举)-->
  <sql id="Base_Column_List_UserRoleJoin" >
	r.id as id,r.unique_code as uniqueCode,r.name as name,r.remark as remark,r.status as status,r.creator as creator,r.create_date as createDate,r.update_time as updateTime,r.version as version  
  </sql>
  <select id="selectByExample" resultMap="BaseResultMap" parameterType="com.keepjob.common.mybatis.MyBatisCriteria" >
    select
    <if test="distinct" >
      distinct
    </if>
    'true' as QUERYID,
    <include refid="Base_Column_List" />
    from comm_user_role_info
    <if test="_parameter != null" >
      <include refid="Example_Where_Clause" />
    </if>
    <if test="orderByClause != null" >
      order by ${orderByClause}
    </if>
  </select>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="com.keepjob.sys.user.UserRole" >
    select 
    <include refid="Base_Column_List" />
    from comm_user_role_info
    where role_code = #{roleCode,jdbcType=VARCHAR}
      and user_code = #{userCode,jdbcType=VARCHAR}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="com.keepjob.sys.user.UserRole" >
    delete from comm_user_role_info
    where role_code = #{roleCode,jdbcType=VARCHAR}
      and user_code = #{userCode,jdbcType=VARCHAR}
  </delete>
  <delete id="deleteByExample" parameterType="com.keepjob.common.mybatis.MyBatisCriteria" >
    delete from comm_user_role_info
    <if test="_parameter != null" >
      <include refid="Example_Where_Clause" />
    </if>
  </delete>
  <insert id="insert" parameterType="com.keepjob.sys.user.UserRole" >
    insert into comm_user_role_info
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="roleCode != null" >
        role_code,
      </if>
      <if test="userCode != null" >
        user_code,
      </if>
      <if test="version != null" >
        version,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="roleCode != null" >
        #{roleCode,jdbcType=VARCHAR},
      </if>
      <if test="userCode != null" >
        #{userCode,jdbcType=VARCHAR},
      </if>
      <if test="version != null" >
        #{version,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>
  <select id="countByExample" parameterType="com.keepjob.common.mybatis.MyBatisCriteria" resultType="java.lang.Integer" >
    select count(1) from comm_user_role_info
    <if test="_parameter != null" >
      <include refid="Example_Where_Clause" />
    </if>
  </select>
  <update id="updateByPrimaryKey" parameterType="com.keepjob.sys.user.UserRole" >
    update comm_user_role_info
    <set >
      <if test="version != null" >
        version = #{version,jdbcType=INTEGER},
      </if>
    </set>
    where role_code = #{roleCode,jdbcType=VARCHAR}
      and user_code = #{userCode,jdbcType=VARCHAR}
  </update>
  
  <!-- 	查询用户角色   -->
   <select id="qryRolesByUer" parameterType="com.keepjob.common.mybatis.MyBatisCriteria" resultType="com.keepjob.sys.role.Role" >
    select 
	  <include refid="Base_Column_List_UserRoleJoin" /> 
	 from comm_role_info r join comm_user_role_info ur on ur.role_code=r.unique_code 
	 <if test="_parameter != null" >
       <include refid="Example_Where_Clause" />
     </if>
  </select>
</mapper>