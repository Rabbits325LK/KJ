<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.keepjob.sys.role.RoleResourceMapper" >
  <resultMap id="BaseResultMap" type="com.keepjob.sys.role.RoleResource" >
    <id column="resource_code" property="resourceCode" jdbcType="VARCHAR" />
    <id column="role_code" property="roleCode" jdbcType="VARCHAR" />
    <result column="version" property="version" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Example_Where_Clause" >
    <where >
      <foreach collection="oredCriteria" item="criteria" separator="or" >
        <if test="criteria.valid" >
          <trim prefix="(" suffix=")" prefixOverrides="and" >
            <foreach collection="criteria.criteria" item="criterion" >
              <choose >
                <when test="criterion.noValue" >
                  and ${criterion.condition}
                </when>
                <when test="criterion.singleValue" >
                  and ${criterion.condition} #{criterion.value}
                </when>
                <when test="criterion.betweenValue" >
                  and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                </when>
                <when test="criterion.listValue" >
                  and ${criterion.condition}
                  <foreach collection="criterion.value" item="listItem" open="(" close=")" separator="," >
                    #{listItem}
                  </foreach>
                </when>
              </choose>
            </foreach>
          </trim>
        </if>
      </foreach>
    </where>
  </sql>
  <sql id="Base_Column_List" >
    resource_code, role_code, version
  </sql>
  <select id="selectByExample" resultMap="BaseResultMap" parameterType="com.keepjob.common.mybatis.MyBatisCriteria" >
    select
    <if test="distinct" >
      distinct
    </if>
    'true' as QUERYID,
    <include refid="Base_Column_List" />
    from comm_role_resource_info
    <if test="_parameter != null" >
      <include refid="Example_Where_Clause" />
    </if>
    <if test="orderByClause != null" >
      order by ${orderByClause}
    </if>
  </select>
  <delete id="deleteByExample" parameterType="com.keepjob.common.mybatis.MyBatisCriteria" >
    delete from comm_role_resource_info
    <if test="_parameter != null" >
      <include refid="Example_Where_Clause" />
    </if>
  </delete>
  <insert id="insert" parameterType="com.keepjob.sys.role.RoleResource" >
    insert into comm_role_resource_info
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="resourceCode != null" >
        resource_code,
      </if>
      <if test="roleCode != null" >
        role_code,
      </if>
      <if test="version != null" >
        version,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="resourceCode != null" >
        #{resourceCode,jdbcType=VARCHAR},
      </if>
      <if test="roleCode != null" >
        #{roleCode,jdbcType=VARCHAR},
      </if>
      <if test="version != null" >
        #{version,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>
  <select id="countByExample" parameterType="com.keepjob.common.mybatis.MyBatisCriteria" resultType="java.lang.Integer" >
    select count(1) from comm_role_resource_info
    <if test="_parameter != null" >
      <include refid="Example_Where_Clause" />
    </if>
  </select>
  <update id="updateByPrimaryKey" parameterType="com.keepjob.sys.role.RoleResource" >
    update comm_role_resource_info
    <set >
      <if test="version != null" >
        version = #{version,jdbcType=INTEGER},
      </if>
    </set>
    where resource_code = #{resourceCode,jdbcType=VARCHAR}
      and role_code = #{roleCode,jdbcType=VARCHAR}
  </update>
  <!-- 角色资源 -->  
  <select id="findRoleResources" resultMap="BaseResultMap" parameterType="java.lang.String" >
  	select t.resource_code, t.role_code, t.version
    from comm_role_resource_info t, comm_resource_info a 
    where t.resource_code = a.code and a.url = #{url,jdbcType=VARCHAR}
  </select>
</mapper>